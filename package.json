{
	"name": "chneau.github.io",
	"scripts": {
		"start": "rsbuild dev",
		"build": "rsbuild build",
		"deploy": "bun run build && gh-pages --dist dist --branch master; rm -rf dist",
		"upgrade": "bun update --latest",
		"check": "deno fmt --use-tabs --quiet; oxlint --fix-dangerously --quiet; biome check --write --unsafe .",
		"lint": "tsc",
		"all": "bun run upgrade; bun run check; bun run lint"
	},
	"dependencies": {
		"antd": "^5.23.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"styled-components": "^6.1.14"
	},
	"devDependencies": {
		"@rsbuild/core": "^1.2.4",
		"@rsbuild/plugin-react": "^1.1.0",
		"@types/react": "^19.0.8",
		"@types/react-dom": "^19.0.3",
		"gh-pages": "^6.3.0",
		"typescript": "^5.7.3"
	}
}
